	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch file",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"asRoot": true,
			"program": "${workspaceFolder}/app/cmd/main.go",
			"args": ["../app.env"]
		},
		{
			"name": "Attach to Process",
			"type": "go",
			"request": "attach",
			"mode": "local",
			"processId": "1195799" // Replace with your process name or ID
		}
	]
}
